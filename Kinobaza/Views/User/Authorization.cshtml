@model UserAuthVM;

<!-- Author -->
<section class="author">

    <!-- return -->
    <div class="author__return">
        <a class="button button--return button--return-author" asp-controller="Home" asp-action="Index">на главную</a>
    </div>

    <!-- title -->
    <h1 class="author__title">Авторизация</h1>

    <!-- form -->
    <form class="author__form" asp-action="Authorization" method="post">

        <div class="valid-span-summary" asp-validation-summary="ModelOnly"></div>

        <!-- inputs -->
        <div class="author__input-field">
            <div class="text-field">
                <label class="text-field__label" asp-for="Login">Логин</label>
                <input class="text-field__input" asp-for="Login" type="text" maxlength="20">
            </div>
            <span class="valid-span" asp-validation-for="Login"></span>
        </div>

        <div class="author__input-field">
            <div class="text-field">
                <label class="text-field__label" asp-for="Password">Пароль</label>
                <input class="text-field__input" asp-for="Password" type="password" maxlength="50">
            </div>
            <span class="valid-span" asp-validation-for="Password"></span>
        </div>

        <!--buttons-->
        <div class="author__buttons">
            <input class="button button--green" type="submit" value="войти">
            <a class="button button--blue" asp-action="Registration">регистрация</a>
        </div>

    </form>
</section>